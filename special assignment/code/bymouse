void mousePressed() {
  onPressed = true;
  if (showInstruction) {
    background(186,186,186);
    showInstruction = false;
  }
}

void mouseReleased() {
  onPressed = false;
}

void keyPressed() {
  if (key == 'c') {
    for (int i=pts.size()-1; i>-1; i--) {
      Particle p = pts.get(i);
      pts.remove(i);
    }
    showInstruction = false;
    background(186,186,186);
  }
  if(key=='s'){
    showInstruction = false;
    
    saveFrame("save.png");
    
  }
}
